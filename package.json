{
  "name": "dev-link",
  "version": "1.0.0",
  "description": "Link up with like-minded developers",
  "main": "index.js",
  "scripts": {
    "start": "cd ./server && node server.js",
    "startdev": "npm-run-all --parallel start:client start:server",
    "start:client": "cd ./client && yarn start",
    "start:server": "cd ./server && yarn server",
    "install:all": "yarn && npm-run-all --parallel install:client install:server",
    "install:client": "cd ./client && yarn install",
    "install:server": "cd ./server && yarn install",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bradypp/dev-link.git"
  },
  "author": "Paul Brady",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bradypp/dev-link/issues"
  },
  "homepage": "https://github.com/bradypp/dev-link#readme",
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
